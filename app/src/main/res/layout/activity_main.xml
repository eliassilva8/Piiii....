<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.insult.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/imageview"
        android:id="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Insult"
        android:id="@+id/title"
        android:gravity="center_horizontal"
        android:textSize="70dp"
        android:textColor="#212121"
        />

    <TextView
        android:layout_width="1000dp"
        android:layout_height="200dp"
        android:id="@+id/message"
        android:gravity="fill_horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="25dp"
        android:textSize="25dp"
        android:textAlignment="center"
        android:shadowColor="#424242"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="#212121"



        />

    <ImageButton
        android:id="@+id/insulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/insulta"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="randomInsult" />

    <ImageButton
        android:id="@+id/compliments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/elogia"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="randomCompliment"/>


</RelativeLayout>
